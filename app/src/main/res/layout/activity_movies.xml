<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoviesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/toolbarstreaming"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#000C32"
            android:minHeight="?attr/actionBarSize">

            <LinearLayout
                android:id="@+id/LL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="25dp"
                android:paddingTop="15dp"
                android:paddingEnd="25dp"
                android:paddingBottom="15dp">

                <ImageView
                    android:id="@+id/imageBackButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/white"
                    app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentEnd="false"
                android:layout_marginStart="5dp"
                android:gravity="center|center_vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:clipToOutline="true"
                    android:padding="15dp"
                    app:srcCompat="@drawable/movieflixtext_no_background" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000222"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/LinearFirst"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/SearchView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner8"
                    android:clickable="true"
                    android:focusable="true"
                    android:theme="@style/SearchViewTheme"
                    app:iconifiedByDefault="false"
                    app:queryHint="Αναζήτηση..."
                    app:searchIcon="@drawable/ic_baseline_search_24" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp" >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/RecyclerViewPageMovies"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <RelativeLayout
                        android:id="@+id/NoResultLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/NoResults"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="Δεν βρέθηκε κάποιο αποτέλεσμα! \n Μπορείτε να μας προτείνετε ποιά ταινία θα θέλατε να προσθέσουμε!"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/SubmissionButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/NoResults"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/rounded_corner_text"
                            android:fontFamily="sans-serif-medium"
                            android:paddingStart="10dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="5dp"
                            android:text="ΠΡΟΤΑΣΕΙΣ"
                            android:textColor="#000C32"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ProgressLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000222"
                android:gravity="center">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>