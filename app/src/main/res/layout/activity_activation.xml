<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivationActivity" >

    <RelativeLayout
        android:id="@+id/toolbarstreaming"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#000C32">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/info"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="7.5dp"
                android:src="@drawable/info_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/Ig"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/instagram_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="5dp"
            android:gravity="center|center_vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clipToOutline="true"
                android:padding="15dp"
                app:srcCompat="@drawable/movieflixtext_no_background" />

        </LinearLayout>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarstreaming">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:gravity="center_horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/ActivationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="false"
                android:text="Unlock a MovieFlix Version before continuing..."
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/ActivationTitle"
                android:layout_marginTop="10dp"
                android:background="@color/blue"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/TextInputLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:hint="Type a version code..."
                        android:padding="10dp"
                        android:textColorHint="@color/white"
                        app:boxStrokeColor="@color/text_input_layout_selector"
                        app:helperTextTextColor="@color/white"
                        app:hintTextColor="@color/white"
                        app:placeholderTextColor="@color/yellow">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/textInputEditText1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:maxLines="15"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/TextInputLL"
                    android:gravity="center"
                    android:padding="10dp"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/Submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:backgroundTint="#11FF00"
                        android:text="UNLOCK"
                        android:textColor="#032900"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>