<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center|center_vertical"
    app:cardCornerRadius="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="#030F37"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:cardBackgroundColor="#030F37"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#001E7C"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="150dp"
                android:background="@drawable/rounded_corner7"
                android:gravity="center">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageMain"
                    style="@style/category_shape"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_corner7"
                    app:shapeAppearance="@style/category_shape" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center" />

                <RelativeLayout
                    android:id="@+id/LockedLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#A4000000">

                    <ImageView
                        android:id="@+id/Locked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/ic_baseline_lock_24" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.5dp"
                android:layout_marginBottom="7.5dp"
                android:gravity="center"
                android:lines="2"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>