        <item name="colorOnSecondary">#000222</item>
        <item name="android:windowBackground">#000222</item>
        <item name="colorAccent">#FFDD00</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#000C32</item>
        <item name="android:navigationBarColor">#000C32</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:hardwareAccelerated">true</item>
        <item name="colorControlHighlight">#0C35BC</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
    </style>
