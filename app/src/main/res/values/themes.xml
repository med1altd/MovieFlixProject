    <style name="Theme.MovieFlix" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#030F37</item>
        <item name="colorPrimaryVariant">#000222</item>
        <item name="colorOnPrimary">#000222</item>
        <!-- Secondary brand color. -->
